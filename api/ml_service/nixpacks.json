{
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "phases": {
                "setup": {
                    "nixPkgs": [
                        "python311",
                        "gcc"
                    ]
                },
                "install": {
                    "cmds": [
                        "python -m venv .venv",
                        ". .venv/bin/activate",
                        "pip install -r requirements.txt"
                    ]
                }
            }
        }
    }
}